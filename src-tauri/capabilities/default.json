{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "fs:default",
    "fs:allow-appcache-write-recursive",
    "fs:allow-appconfig-write-recursive",
    {
      "identifier": "http:default",
      "allow": [{
        "url": "https://*.nexusmods.com"
      }]
    }
  ]
}